properties([
    parameters([
        string(defaultValue: 'terraform.tfvars', description: 'Specify the file name', name: 'File-Name')
    ])
])

pipeline {
    agent any

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {
        stage('üì• Clone Repo') {
            steps {
                git branch: 'main',
                    credentialsId: 'github_token',
                    url: 'https://github.com/Bhavitha2217-git/bhavitha-terraform.git'
            }
        }

        stage('‚öôÔ∏è Initialize Terraform') {
            steps {
                 dir("${WORKSPACE}") {
                   
                        sh 'terraform init -reconfigure -input=false'
                    }
                }
            }
        

        stage('üîç Validate Terraform') {
            steps {
                 dir("${WORKSPACE}") {
                   
                        sh 'terraform validate'
                    }
                }
            }
        

        stage('üìä Terraform Plan') {
            steps {
                 dir("${WORKSPACE}") {
                   
                        sh "terraform plan -input=false -var-file=${params['File-Name']} -out=tfplan"
                    }
                }
            }
        

        stage('üõë Approval') {
            steps {
                script {
                    def userChoice = input(
                        id: 'userInput', message: 'Proceed with Terraform Apply?',
                        parameters: [
                            choice(choices: ['Apply', 'Abort'], description: 'Choose action', name: 'Action')
                        ]
                    )
                    if (userChoice == 'Abort') {
                        currentBuild.result = 'ABORTED'
                        error("‚ùå Pipeline aborted by user choice.")
                    } else {
                        echo "‚úÖ Approval granted. Proceeding with Apply..."
                    }
                }
            }
        }

        stage('üöÄ Terraform Apply') {
            when {
                expression { currentBuild.resultIsBetterOrEqualTo('SUCCESS') }
            }
            steps {
                 dir("${WORKSPACE}") {
                   
                        sh "terraform apply -input=false -auto-approve tfplan"
                    }
                }
            }
        }
    

    post {
        success {
            echo "‚úÖ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed!"
        }
        aborted {
            echo "‚ö†Ô∏è Pipeline aborted!"
        }
    }
}
