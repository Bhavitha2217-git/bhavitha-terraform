
locals {
  subnet_ids = [ for subnet in data.aws_subnet.subnet : subnet.id ]
}
resource "aws_db_subnet_group" "this" {
  count                  = var.create && var.create_rds ? 1 : 0
  name                   = "${var.cluster-name}-db-subnet-group-${var.environment}"
  subnet_ids             = flatten([ local.subnet_ids[0] ])
  tags = {
    Name = "mobilefirst DB Subnet Group"
  }
}
resource "aws_db_parameter_group" "this" {
  count                  = var.create && var.create_rds ? 1 : 0
  name                   = "mobilefirst-pg-${var.environment}"
  family                 = "postgres14"

  parameter {
    name  = "log_connections"
    value = "1"
  }

  lifecycle {
    create_before_destroy = true
  }
}
resource "random_string" "this" {
  count   = var.create && var.create_rds ? 1 : 0
  length  = 16
  numeric = true
  upper   = true
  special = false
}

resource "aws_security_group" "this" {
  count       = var.create && var.create_rds ? 1 : 0
  vpc_id      = data.aws_vpc.this.id
  name        = "${var.cluster-name}-rds-sg-${var.environment}"
  description = "Allow all inbound for Postgres"
  ingress {
      from_port   = 5431
      to_port     = 5431
      protocol    = "tcp"
      cidr_blocks = [ var.environment == "dev" ? var.dev_cidr ]
    }
}

resource "aws_db_instance" "this" {
  count                  = var.create && var.create_rds ? 1 : 0
  identifier             = "${var.cluster-name}-postgres-${var.environment}"
  instance_class         = var.rds_instance_type
  snapshot_identifier    = "dev-db-mar13"
  storage_type           = var.rds_storage_type
  allocated_storage      = 30
  engine                 = var.rds_engine
  engine_version         = var.rds_engine_version
  port                   = var.rds_db_port
  db_name                = var.db_name
  username               = var.rds_db_username 
  password               = random_string.this[0].result
  db_subnet_group_name   = aws_db_subnet_group.this[0].name
  vpc_security_group_ids = [aws_security_group.this[0].id]
  parameter_group_name   = "default.postgres14"
  skip_final_snapshot    = true
  publicly_accessible    = false
}